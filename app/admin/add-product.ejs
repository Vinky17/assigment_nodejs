<%- include('./header') %>

  <form action="/admin/add-product" method="POST" enctype="multipart/form-data"
    class="col-8 mt-5 border border-dark p-3 m-auto">
    <h3 class="text-center">THÊM SẢN PHẨM</h3>
    <div class="form-group">
      <label class="" for="tittle">Tên sách</label>
      <input class="form-control " name="tittle" id="tittle">
    </div>
    <div class="form-group">
      <label class="" for="author">Tác giả</label>
      <input class="form-control " name="author" id="author">
    </div>
    <div class="form-group">
      <label class="" for="description">Mô tả</label>
      <textarea rows="5" class="form-control " name="description" id="description"> </textarea>
    </div>
    <div class="form-group">
      <label class="" for="image">Hình sản phẩm</label>
      <input type="file" class="form-control " name="image" id="image">
    </div>
    <div class="form-group mt-2">
      <label class="" for="image">Loại sách</label>
      <select name="type_book" id="">
        <option value="0">Chọn thể loại</option>
        <% for (let t of type) { %>
          <option value="<%=t.pk_type_id%>">
            <%=t.type_name%>
          </option>
          <% } %>
      </select>
    </div>
    <div class="form-group mt-3 ">
      <button type="submit" class="btn btn-primary py-2 px-4">THÊM SẢN PHẨM</button>
    </div>
  </form>
  </div>