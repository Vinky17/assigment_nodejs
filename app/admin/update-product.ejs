<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"> </script>

<div class="container">
  <a href="/admin/list-product" class="btn btn-secondary mt-2 mb-2">Quay lại</a>
  <form action="/admin/update-product/" method="POST" enctype="multipart/form-data"
    class="col-8 mt-4 border border-dark p-3 m-auto">
    <h3 class="text-center">Cập nhật sản phẩm</h3>
    <input class="form-control bg-light" hidden name="id" id="id">
    <div class="form-group">
      <label class="" for="tendsp">Tên sản phẩm</label>
      <input class="form-control bg-light" name="tittle" value="<%=book.tittle%>" id="tendsp">
    </div>
    <div class="form-group">
      <label class="" for="author">Tác giả</label>
      <input class="form-control bg-light" value="<%=book.author%>" name="author" id="author">

    </div>
    <div class="form-group">
      <label class="" for="motasp">Mô tả</label>
      <textarea rows="5" class="form-control bg-light" name="description" id="motadsp"><%=book.description%></textarea>
    </div>
    <div class="form-group">
      <label for="formControl">Danh mục</label>
      <select class="form-control" id="formControl" name="type_book">
        <% for (let t of type) { %>
          <option value="<%=t.pk_type_id%>">
            <%=t.type_name%>
          </option>
          <% } %>
      </select>
    </div>
    <div class="form-group">
      <label class="" for="hinhsp">Hình sản phẩm</label>
      <input class="form-control bg-light" name="image" type="file" id="hinhsp">
    </div>
    <div class="form-group mt-3 ">
      <button type="submit" class="btn btn-primary py-2 px-4">Lưu</button>
    </div>
  </form>
</div>
</div>