<%- include('./header') %>
  <div class="container">
    <div class="row">
      <div class="col">
        <form action="/login" method="POST" class="col-6 mt-5 border border-dark p-4 m-auto">
          <h3 class="text-center">Đăng nhập</h3>
          <div class="form-group">
            <label class="" for="tittle">Username</label>
            <input class="form-control " name="username" id="username">
          </div>
          <div class="form-group">
            <label class="" for="author">Password</label>
            <input class="form-control " name="password" id="password">
          </div>
          <a href="/signup">Đăng ký tài khoản mới</a>
          <a href="/changepassword">Thay đổi mật khẩu </a>
          <div class="form-group mt-3 ">
            <button type="submit" class="btn btn-primary py-2 px-4">Đăng nhập</button>
          </div>
        </form>
      </div>
    </div>
  </div>