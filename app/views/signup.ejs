<%- include('./header') %>
  <div class="container">
    <div class="row">
      <div class="col">
        <form action="/signup/" method="POST" class="col-6 mt-5 border border-dark p-4 m-auto">
          <h3 class="text-center">Đăng ký tài khoản</h3>
          <div class="form-group">
            <label class="" for="tittle">Fullname</label>
            <input class="form-control " name="fullname" id="fullname">
          </div>
          <div class="form-group">
            <label class="" for="tittle">Username</label>
            <input class="form-control " name="username" id="username">
          </div>
          <div class="form-group">
            <label class="" for="author">Password</label>
            <input class="form-control " name="password" id="password">
          </div>
          <div class="form-group">
            <label class="" for="author">Email</label>
            <input class="form-control " name="email" id="email">
          </div>
          <div class="form-group">
            <label class="" for="author">Adress</label>
            <input class="form-control " name="address" id="address">
          </div>
          <div class="form-group">
            <select name="role" id="">
              <option value="0">Thành viên</option>
              <option value="1">Admin</option>
            </select>
          </div>
          <a href="/login">Đăng nhập</a>
          <div class="form-group mt-3 ">
            <button type="submit" class="btn btn-primary py-2 px-4">Đăng ký</button>
          </div>
        </form>
      </div>
    </div>
  </div>